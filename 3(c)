#include<stdio.h>
void main()
{
int areac,areas,arear,peric,peris,perir;
int c;
printf("1 for area of circle\n;2 for area of square\n;3 for area of rectangle\n");
printf("enter your choice");
scanf("%d",&c);
switch(c)
case 1:
int r;
printf("enter the radius of circle");
scanf("%d",&r);
areac=3.14*r*r;
peric=2*3.14*r;
printf("area and perimeter of circle is:%d\n%d\n",areac,peric);
break;
case 2:
int s;
printf("enter the side of the square");
scanf("%d"&s);
areas=s*s;
peris=4*s;
printf("area and perimeter of square is:%d\n%d\n",areas,peris);
break;
case 3:
int l,b;
printf("enter the length and breadth of the rectangle");
scanf("%d%d"&l,&b);
areas=l*b;
peris=2*(l+b);
printf("area and perimeter of rectangle is:%d\n%d\n",arear,perir);
default;
printf("INVALID")
}
}
